{
  "name": "mckenziewagner/waffleiron",
  "description": "waffleiron is a suite of packages conforming to drupal & wordpress sites being deployed throgh CI to pantheon... all while using one app/repo.. waffleiron!",
  "type": "project",
  "keywords": [],
  "minimum-stability": "alpha",
  "require": {
    "composer/installers": "^1.3.0",
    "wikimedia/composer-merge-plugin": "dev-master",
    "vlucas/phpdotenv": "^2.4.0",
    "eftec/bladeone": "^3.30@dev",
    "behat/mink-goutte-driver": "^1.2",
    "pantheon-systems/quicksilver-pushback": "^1.0",
    "rvtraveller/qs-composer-installer": "^1.1"
  },
  "require-dev": {
    "roave/security-advisories": "dev-master",
    "behat/behat": "3.*",
    "behat/mink": "^1.7",
    "behat/mink-extension": "^2.2",
    "behat/mink-goutte-driver": "^1.2",
    "behat/mink-selenium2-driver": "^1.3",
    "dealerdirect/phpcodesniffer-composer-installer": "^0.5.0",
    "dmore/behat-chrome-extension": "^1.3",
    "genesis/behat-fail-aid": "^2.1",
    "jcalderonzumba/gastonjs": "^1.0.2",
    "doctrine/instantiator": "^1.0.5",
    "jcalderonzumba/mink-phantomjs-driver": "^0.3.1",
    "mikey179/vfsstream": "^1.2",
    "phpunit/phpunit": "^4.8",
    "squizlabs/php_codesniffer": "^3.4.0",
    "brain/monkey": "^1.4",
    "symfony/css-selector": "^2.8"
  },
  "autoload": {
    "classmap": [
      "scripts/composer/ScriptHandler.php"
    ]
  },
  "config": {
    "vendor-dir": "vendor",
    "preferred-install": "dist",
    "optimize-autoloader": true,
    "sort-packages": true
  },
  "extra": {
    "merge-plugin": {
      "include": [
        "./composer.*.json"
      ],
      "recurse": true,
      "replace": false,
      "ignore-duplicates": true,
      "merge-dev": true,
      "merge-extra": true,
      "merge-extra-deep": true,
      "merge-scripts": true
    },
    "drupal-scaffold": {
      "source": "https://raw.githubusercontent.com/pantheon-systems/drops-8-scaffolding/{version}/{path}",
      "includes": [
        "sites/default/default.services.pantheon.preproduction.yml",
        "sites/default/settings.pantheon.php"
      ],
      "excludes": [
        ".csslintrc",
        ".editorconfig",
        ".eslintignore",
        ".eslintrc.json",
        ".htaccess",
        "web.config"
      ]
    },
    "wordpress-install-dir": "web/wp",
    "drupal-install-dir": "web/drupal",
    "installer-paths": {
      "web/wp-content/plugins/{$name}/": ["type:wordpress-plugin"],
      "web/wp-content/themes/{$name}/": ["type:wordpress-theme"],
      "web/drupal": ["type:drupal-core"],
      "web/sites/all/libraries/{$name}": ["type:drupal-library"],
      "web/sites/all/modules/contrib/{$name}": ["type:drupal-module"],
      "web/sites/all/profiles/contrib/{$name}": ["type:drupal-profile"],
      "web/sites/all/themes/contrib/{$name}": ["type:drupal-theme"],
      "drush/Commands/contrib/{$name}": ["type:drupal-drush"],
      "web/private/scripts/quicksilver/{$name}/": ["type:quicksilver-script"]
    }
  },
  "scripts": {
    "build-assets": [
      "@prepare-for-pantheon",
      "composer install --no-dev --no-interaction --optimize-autoloader --no-progress"
    ],
    "cleanup": [
      "./scripts/composer/cleanup-composer"
    ],
    "unit-test": [
      "./vendor/bin/phpunit tests/unit/*"
    ]
  }
}
